<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>
    <style name="ButtonDefault" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/default_button_root</item>
    </style>

    <style name="ButtonDefault.Easy">
        <item name="android:background">@drawable/easy_button_root</item>
    </style>
    <style name="ButtonDefault.Med">
        <item name="android:background">@drawable/medium_button_root</item>
    </style>
    <style name="ButtonDefault.Hard">
        <item name="android:background">@drawable/hard_button_root</item>
    </style>
    <style name="ButtonDefault.Prod">
        <item name="android:background">@drawable/prodigy_button_root</item>
    </style>
    <style name="ButtonDefault.cpp">
        <item name="android:background">@drawable/cpp_button_root</item>
    </style>
    <style name="ButtonDefault.csharpe">
        <item name="android:background">@drawable/csharpe_button_root</item>
    </style>
    <style name="ButtonDefault.python">
        <item name="android:background">@drawable/python_button_root</item>
    </style>
    <style name="ButtonDefault.js">
        <item name="android:background">@drawable/js_button_root</item>
    </style>

</resources>
