<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>
    <style name="ButtonDefault" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/default_button_root</item>
    </style>

    <style name="ButtonDefault.Easy">
        <item name="android:backgroundTint">@color/soothing_blue</item>
    </style>
    <style name="ButtonDefault.Med">
        <item name="android:backgroundTint">@color/green</item>
    </style>
    <style name="ButtonDefault.Hard">
        <item name="android:backgroundTint">@color/orange</item>
    </style>
    <style name="ButtonDefault.Prod">
        <item name="android:backgroundTint">@color/red</item>
    </style>

</resources>
