<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="23dp"
            android:paddingBottom="40dp"
            android:text="@string/homepage_title" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="19dp"
            android:paddingBottom="20dp"
            android:text="@string/langSelect" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/ButtonDefault"
            android:background="@drawable/clogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/csharpe"/>

        <Button
            style="@style/ButtonDefault"
            android:background="@drawable/pngtrans"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/javascript"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/ButtonDefault"
            android:background="@drawable/cpp_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cpp"/>

        <Button
            style="@style/ButtonDefault"
            android:text="@string/python"
            android:background="@drawable/python"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/python"/>

    </LinearLayout>


</LinearLayout>
</ScrollView>